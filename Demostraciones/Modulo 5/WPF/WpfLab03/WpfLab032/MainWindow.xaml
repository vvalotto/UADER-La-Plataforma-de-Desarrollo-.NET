<Window x:Class="WpfLab032.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="304" Width="391" Loaded="Window_Loaded">
    <Grid>
        <RichTextBox HorizontalAlignment="Stretch" Margin="0,32,0,0" 
                     Name="richTextBox1" VerticalAlignment="Stretch" Height="Auto"
                     Background="LightBlue"/>
        <ToolBar Height="26" HorizontalAlignment="Left" Name="toolBar1" VerticalAlignment="Top" Width="369">
            <Button Click="Button_Click">Bold</Button>
            <Button Click="Button_Click_1">Italic</Button>
            <Slider Name="Slider1" Minimum="2" Maximum="72" 
                    Width="100" ValueChanged="Slider1_ValueChanged"></Slider>
            <ComboBox Name="comboBox1" Width="75" 
                      SelectionChanged="comboBox1_SelectionChanged"></ComboBox>
        </ToolBar>
    </Grid>
</Window>
